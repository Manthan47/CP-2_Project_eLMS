<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chooseAssignmentFile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Choose Assignment File" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/assignmentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Assignment Title" />

            <TextView
                android:id="@+id/uriTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/uploadAssignment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Upload Assignment" />

            <TextView
                android:id="@+id/dwnTxt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</ScrollView>